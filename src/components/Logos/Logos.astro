<section class="bg-[#687a67] py-16 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Section Title -->
    <div class="mb-12">
      <h2 class="text-4xl font-light text-white mb-2">Equipo</h2>
    </div>

    <!-- Partners/Companies Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 items-center">
      <!-- KDS Kapital del Sur -->
      <div class="flex justify-center md:justify-start">
        <!-- If you have a logo image, uncomment this and comment the text version -->
        <!-- <img src="/images/logos/kds-logo.png" alt="KDS Kapital del Sur" class="h-16 w-auto filter brightness-0 invert" /> -->
        
        <!-- Text version -->
        <div class="text-white">
          <div class="flex items-center space-x-4">
            <h3 class="text-4xl font-bold tracking-wider">KDS</h3>
          </div>
          <p class="text-lg font-light tracking-widest mt-1">KAPITAL DEL SUR</p>
        </div>
      </div>

      <!-- Winefroz -->
      <div class="flex justify-center">
        <!-- If you have a logo image, uncomment this and comment the text version -->
        <!-- <img src="/images/logos/winefroz-logo.png" alt="Winefroz" class="h-12 w-auto filter brightness-0 invert" /> -->
        
        <!-- Text version -->
        <div class="text-white">
          <h3 class="text-3xl font-light tracking-[0.3em]">WINEFROZ</h3>
        </div>
      </div>

      <!-- Castro Valenzuela Arquitectos -->
      <div class="flex justify-center md:justify-end">
        <!-- If you have a logo image, uncomment this and comment the text version -->
        <!-- <img src="/images/logos/castro-valenzuela-logo.png" alt="Castro Valenzuela Arquitectos" class="h-16 w-auto filter brightness-0 invert" /> -->
        
        <!-- Text version -->
        <div class="text-white flex items-center space-x-4">
          <!-- Architectural Logo/Symbol -->
          <div class="flex flex-col items-center">
            <svg 
              class="w-12 h-12 mb-2" 
              viewBox="0 0 48 48" 
              fill="none" 
              xmlns="http://www.w3.org/2000/svg"
            >
              <!-- Simple architectural lines representing the logo -->
              <path 
                d="M8 40L24 8L40 40M12 32H36M16 24H32" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round"
              />
            </svg>
            <div class="text-center">
              <p class="text-lg font-medium tracking-wider">CASTRO</p>
              <p class="text-lg font-medium tracking-wider">VALENZUELA</p>
              <p class="text-sm font-light tracking-widest mt-1">ARQUITECTOS</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
